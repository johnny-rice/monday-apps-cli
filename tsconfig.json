{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM" /*Added it to support PUSHER-JS lib*/
    ]
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "**/*.test.ts"
  ]
}
